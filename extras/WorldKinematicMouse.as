package extras {		import Box2DAS.*;	import Box2DAS.Collision.*;	import Box2DAS.Collision.Shapes.*;	import Box2DAS.Common.*;	import Box2DAS.Dynamics.*;	import Box2DAS.Dynamics.Contacts.*;	import Box2DAS.Dynamics.Joints.*;	import cmodule.Box2D.*;	import wck.*;	import shapes.*;	import misc.*;	import extras.*;	import flash.utils.*;	import flash.events.*;	import flash.display.*;	import flash.text.*;	import flash.geom.*;		public class WorldKinematicMouse extends wck.World {				public var dragBody:BodyShape;		public var dragType:String;		public var dragAutoSleep:Boolean;				public override function handleDragStart(e:Event):void {			dragBody = e.target as BodyShape;			if(dragBody) {				dragBody = dragBody.body;				dragType = dragBody.type;				dragBody.type = 'Animated';				dragBody.awake = true;				dragAutoSleep = dragBody.autoSleep;				dragBody.autoSleep = false;				super.handleDragStart(e);			}		}						public override function handleDragStep(e:Event):void {			var p:Point = Input.mousePositionIn(this);			dragBody.setPos(p);		}		public override function handleDragStop(e:Event):void {			super.handleDragStop(e);			if(dragBody) {				dragBody.type = dragType;				dragBody.autoSleep = dragAutoSleep;				dragBody = null;			}		}	}}